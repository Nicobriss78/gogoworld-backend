# GoGo.World — Backend .env.example

# Ambiente
NODE_ENV=production
PORT=8080

# Database
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# Auth
JWT_SECRET=change-me

# CORS
# - Usa lista separata da virgole (origini permesse)
# - In produzione: il dominio Netlify/Custom FE
# - In sviluppo: http://localhost:3000
CORS_ORIGIN_FRONTEND=https://<netlify-site>.netlify.app,http://localhost:3000

# Internal (Onira hooks — disabilitati di default)
INTERNAL_ENABLED=false
INTERNAL_API_KEY=change-me
IDEMP_TTL_MS=300000
AUDIT_FILE=./storage/audit.jsonl

# Email/Notifiche (fase successiva)
EMAIL_PROVIDER=
EMAIL_FROM=

# URL pubblico dell'app (utile per link email)
BASE_URL=https://app.gogoworld.tld

# ----------------------------------------------------------
# FUTURE / CONTAINERS (placeholders, già supportati dal codice)
# ----------------------------------------------------------

# Storage Adapter (default = local)
# STORAGE_DRIVER può essere: local | s3
STORAGE_DRIVER=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=
STORAGE_S3_KEY=
STORAGE_S3_SECRET=

# Cache Adapter (default = memory)
CACHE_DRIVER=memory
CACHE_TTL_MS=60000

# Health check (per probes)
# Usato solo da orchestratori, di solito non serve cambiarlo
HEALTH_ROUTE=/healthz
