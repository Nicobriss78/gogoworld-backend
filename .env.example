# GoGo.World — Backend .env.example

NODE_ENV=production
PORT=8080

# Database
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# Auth
JWT_SECRET=change-me

# CORS (solo se FE è su dominio diverso; nel SERVER UNICO lascialo vuoto/assente)
CORS_ORIGIN_FRONTEND=https://<netlify-site>.netlify.app,http://localhost:3000

# Internal (innesti Onira — OFF di default)
INTERNAL_ENABLED=false
INTERNAL_API_KEY=change-me
IDEMP_TTL_MS=300000
AUDIT_FILE=./storage/audit.jsonl

# Email/Notifiche (fase successiva)
EMAIL_PROVIDER=
EMAIL_FROM=

# URL pubblico dell'app (utile per link email)
BASE_URL=https://app.gogoworld.tld
